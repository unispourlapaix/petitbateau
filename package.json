{
  "name": "quete-de-verite",
  "version": "2.0.0",
  "description": "La Quête de Vérité - RPG Spirituel avec Système Modulaire",
  "type": "module",
  "main": "js/main.js",
  "scripts": {
    "start": "npx http-server -p 8080 -c-1",
    "dev": "npx http-server -p 3000 -c-1 --cors",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "build": "echo 'Pas de build nécessaire pour ce projet web vanilla'",
    "analyze": "npx source-map-explorer js/modules/*.js",
    "validate": "npm run lint && npm run test",
    "serve:prod": "npx http-server -p 8080 -c 3600"
  },
  "keywords": [
    "rpg",
    "spirituel",
    "jeu",
    "canvas",
    "javascript",
    "modulaire",
    "breakout",
    "vérité",
    "ange"
  ],
  "author": "Développeur Spirituel",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleNameMapping": {
      "^../js/modules/(.*)$": "<rootDir>/js/modules/$1"
    },
    "collectCoverageFrom": [
      "js/modules/*.js",
      "!js/modules/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "babel": {
    "presets": [["@babel/preset-env", { "targets": { "node": "current" } }]]
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-username/quete-de-verite.git"
  },
  "bugs": {
    "url": "https://github.com/votre-username/quete-de-verite/issues"
  },
  "homepage": "https://votre-username.github.io/quete-de-verite/"
}